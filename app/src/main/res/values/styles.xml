<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="TabButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/tab_bar_height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">6dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/tab_btn_bgd</item>
    </style>

    <style name="TextInfo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">#58575c</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextLabel" parent="TextInfo">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="StatusInfo" parent="TextInfo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
    </style>

    <style name="PageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:padding">6dp</item>
        <item name="android:textColor">@drawable/page_btn_fgd</item>
        <item name="android:background">@drawable/page_btn_bgd</item>
    </style>

    <style name="SmallPageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceButton</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:padding">6dp</item>
        <item name="android:textColor">@drawable/page_btn_fgd</item>
        <item name="android:background">@drawable/page_btn_bgd</item>
    </style>

    <style name="Spinner">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CameraControlButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:padding">6dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#00000000</item>
    </style>
    <style name="FaintBgColor">
        <item name="android:background">#CCCCCC</item>
    </style>
    <style name="DarkBgColor">
        <item name="android:background">#B6B6B4</item>
    </style>

</resources>
