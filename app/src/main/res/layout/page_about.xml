<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <!-- CID logo seen at top of page. -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/about_button"/>

    <!-- "Global BiometricsManger" text. -->
    <TextView
        style="@style/TextLabel"
        android:layout_gravity="center"
        android:text="@string/global_biometricsmanager"
        android:textSize="24sp"/>

    <!-- ProductName, SDKVersion, LibraryVersion. -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/TextLabel"
                android:text="@string/product_name"/>

            <TextView
                android:id="@+id/product_name_man"
                style="@style/TextInfo"
                android:layout_marginStart="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/TextLabel"
                android:text="@string/cid_service_version_label"/>

            <TextView
                android:id="@+id/textview_cid_service_version"
                style="@style/TextInfo"
                android:layout_marginStart="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/TextLabel"
                android:text="@string/device_lib_version_label"/>

            <TextView
                android:id="@+id/textview_device_lib_version"
                style="@style/TextInfo"
                android:layout_marginStart="5dp"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#000000"/>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="6"/>

    <!-- ProductName, DeviceID, SDKVersion, LibraryVersion, AppVersion, LicenseStatus. -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/TextLabel"
                android:text="@string/product_name"/>

            <TextView
                android:id="@+id/textview_product_name"
                style="@style/TextInfo"
                android:layout_marginStart="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/TextLabel"
                android:text="@string/device_id"/>

            <TextView
                android:id="@+id/textview_device_id"
                style="@style/TextInfo"
                android:layout_marginStart="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/TextLabel"
                android:text="@string/cid_service_version_label"/>

            <TextView
                android:id="@+id/textview_cid_service_version_two"
                style="@style/TextInfo"
                android:layout_marginStart="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/TextLabel"
                android:text="@string/device_lib_version_label"/>

            <TextView
                android:id="@+id/textview_device_lib_version_two"
                style="@style/TextInfo"
                android:layout_marginStart="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/TextLabel"
                android:text="@string/app_version"/>

            <TextView
                android:id="@+id/textview_app_version"
                style="@style/TextInfo"
                android:layout_marginStart="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/TextLabel"
                android:text="@string/license_status"/>

            <TextView
                android:id="@+id/textview_license_status"
                style="@style/TextInfo"
                android:layout_marginStart="5dp"/>
        </LinearLayout>

    </LinearLayout>

    <!-- Spinner to GET a preferences current value. -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/get_pref_name"
            style="@style/TextLabel"
            android:entries="@array/preferences_key_list"/>

        <TextView
            android:id="@+id/get_pref_value"
            style="@style/TextInfo"
            android:layout_marginStart="5dp"/>
    </LinearLayout>

    <!-- Spinners to SET a preferences value. -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/set_pref_name"
            style="@style/TextLabel"
            android:entries="@array/preferences_key_list"/>

        <Spinner
            android:id="@+id/set_pref_value"
            style="@style/TextInfo"
            android:layout_marginStart="5dp"
            android:entries="@array/preferences_value_list"/>
    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="3"/>

</LinearLayout>
