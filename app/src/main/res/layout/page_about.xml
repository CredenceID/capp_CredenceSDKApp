<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="204dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/aboutbtn" />

    <TextView
        style="@style/TextLabel"
        android:text="Global BiometricsManager"
        android:textSize="24sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            style="@style/TextLabel"
            android:text="@string/product_name" />

        <TextView
            android:id="@+id/product_name_man"
            style="@style/TextInfo"
            android:layout_marginLeft="5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            style="@style/TextLabel"
            android:text="@string/sdk_version" />

        <TextView
            android:id="@+id/sdk_version_man"
            style="@style/TextInfo"
            android:layout_marginLeft="5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            style="@style/TextLabel"
            android:text="@string/device_library_version" />

        <TextView
            android:id="@+id/device_library_version_man"
            style="@style/TextInfo"
            android:layout_marginLeft="5dp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#000000" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            style="@style/TextLabel"
            android:text="@string/product_name" />

        <TextView
            android:id="@+id/product_name"
            style="@style/TextInfo"
            android:layout_marginLeft="5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            style="@style/TextLabel"
            android:text="@string/device_id" />

        <TextView
            android:id="@+id/device_id"
            style="@style/TextInfo"
            android:layout_marginLeft="5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            style="@style/TextLabel"
            android:text="@string/sdk_version" />

        <TextView
            android:id="@+id/sdk_version"
            style="@style/TextInfo"
            android:layout_marginLeft="5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            style="@style/TextLabel"
            android:text="@string/device_library_version" />

        <TextView
            android:id="@+id/device_library_version"
            style="@style/TextInfo"
            android:layout_marginLeft="5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            style="@style/TextLabel"
            android:text="@string/app_version" />

        <TextView
            android:id="@+id/app_version"
            style="@style/TextInfo"
            android:layout_marginLeft="5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            style="@style/TextLabel"
            android:text="@string/license_status" />

        <TextView
            android:id="@+id/license_status"
            style="@style/TextInfo"
            android:layout_marginLeft="5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Spinner
            android:id="@+id/get_pref_name"
            style="@style/TextLabel"
            android:entries="@array/preferences_key_list"/>

        <TextView
            android:id="@+id/get_pref_value"
            style="@style/TextInfo"
            android:layout_marginLeft="5dp" />
    </LinearLayout>
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Spinner
            android:id="@+id/set_pref_name"
            style="@style/TextLabel"
            android:entries="@array/preferences_key_list"
            />

        <Spinner
            android:id="@+id/set_pref_value"
            style="@style/TextInfo"
            android:entries="@array/preferences_value_list"			
            android:layout_marginLeft="5dp" />
    </LinearLayout>
    
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="3" />

</LinearLayout>
