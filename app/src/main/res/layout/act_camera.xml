	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="20dp"
		android:orientation="horizontal">

		<Button
			android:id="@+id/back_liveness_nfv_btn"
			style="@style/FaceActivityButton"
			android:text="@string/back_camera_liveness_nfv_label"
			android:textSize="16sp" />


		<Button
			android:id="@+id/back_liveness_innovatrics_btn"
			style="@style/FaceActivityButton"
			android:layout_marginStart="10dp"
			android:text="@string/back_camera_liveness_innovatrics_label"
			android:textSize="16sp" />


		<Button
			android:id="@+id/back_liveness_luna_btn"
			style="@style/FaceActivityButton"
			android:layout_marginStart="10dp"
			android:text="@string/back_camera_liveness_luna_label"
			android:textSize="16sp" />

		<Button
			android:id="@+id/back_liveness_tech5_btn"
			style="@style/FaceActivityButton"
			android:layout_marginStart="10dp"
			android:text="@string/back_camera_liveness_tech5_label"
			android:visibility="visible"
			android:textSize="16sp" />

	</LinearLayout>

	<LinearLayout
