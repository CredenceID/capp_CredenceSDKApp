<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_gravity="center"
	android:background="@color/background"
	android:gravity="center"
	android:orientation="vertical">

	<TextView
		android:id="@+id/status_textview"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:textColor="#FF0000"
		android:textSize="20sp"
		android:text="@string/capp_camera_action" />

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="20dp"
		android:orientation="horizontal">

		<Button
			android:id="@+id/liveness_neurotech_btn"
			style="@style/FaceActivityButton"
			android:text="@string/liveness_neurotech_label"
			android:textSize="20sp" />

		<Button
			android:id="@+id/liveness_innovatrics_btn"
			style="@style/FaceActivityButton"
			android:layout_marginStart="10dp"
			android:text="@string/liveness_innovatrics_label"
			android:textSize="20sp" />

		<Button
			android:id="@+id/barcode_cid_btn"
			style="@style/FaceActivityButton"
			android:layout_marginStart="10dp"
			android:text="@string/barcode_cid_label"
			android:textSize="20sp" />

	</LinearLayout>

</LinearLayout>